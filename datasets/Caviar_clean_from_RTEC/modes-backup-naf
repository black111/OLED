modeb(happensAt(walking(+entity),+time))
modeb(happensAt(active(+entity),+time))
modeb(happensAt(inactive(+entity),+time))
modeb(happensAt(abrupt(+entity),+time))
modeb(happensAt(running(+entity),+time))
modeb(happensAt(appear(+entity),+time))
modeb(happensAt(disappear(+entity),+time))

modeb(not happensAt(walking(+entity),+time))
modeb(not happensAt(active(+entity),+time))
modeb(not happensAt(inactive(+entity),+time))
modeb(not happensAt(abrupt(+entity),+time))
modeb(not happensAt(running(+entity),+time))
modeb(not happensAt(appear(+entity),+time))
modeb(not happensAt(disappear(+entity),+time))

modeb(person(+entity,+time))
modeb(not person(+entity,+time))
modeb(initiated(person(+entity),+time))
modeb(terminated(person(+entity),+time))
modeb(not initiated(person(+entity),+time))
modeb(not terminated(person(+entity),+time))

